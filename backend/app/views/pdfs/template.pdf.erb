<h1>The 5 best-selling articles of the chosen user</h1>

<table>
  <thead>
    <tr>
      <th class="c1" >Name</th>
      <th class="c2" >Description</th>
      <th class="c3" >Price</th>
      <th class="c4" >Inventory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td class="c1" ><%= article.name %></td>
        <td class="c2" ><%= article.description %></td>
        <td class="c3" ><%= article.price %></td>
        <td class="c4"><%= article.inventory %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<style>
tr th{
	font-weight:bold;
    }
tr th, tr td{
	padding:5px;
}
th{
    border: 5px solid #C1DAD7;
}
td{
	border: 5px solid #C1DAD7;
}
.c1{
	background:#4b8c74;
}
.c2{
	background:#74c476;
}
.c3{
	background:#a4e56d;
}
.c4{
	background:#cffc83;
}
</style>